pipeline {
    
  agent any

    stages {
  
      stage('build') {
      
          steps {
              echo 'building the application...'
              echo 'Application built 2'
            }
        }
      
      stage('test') {
      
          steps {
              echo 'testing the application...'
            }
        }
      
      stage('deploy') {
      
          steps {
            echo 'deplying the application...'
            }
        }
    }
}
